$easing = cubic-bezier(0.645, 0.045, 0.355, 1);
$textshadow = 0 2px 8px rgba(0, 0, 0, 0.8);

:root {
  --cursor: default;
}

* {
  outline: none;
}

html {
  font-size: 20px;
  overflow-x: hidden;

  @media (max-width: 670px) {
    font-size: 16px;
  }
}

body {
  width: 100%;
  height: 100%;
  font-family: 'Maxima-Med', 'Arial', sans-serif;
  font-weight: normal;
  line-height: 1.45;
  letter-spacing: 0.02em;
  background: url('images/met-bg.jpg') no-repeat center center / cover;
  cursor: var(--cursor);
  -webkit-font-smoothing: antialiased;

  &:after {
    content: '';
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
    background: #111;
    animation: fadeOut 0.5s 0.25s forwards;
  }
}

@keyframes fadeOut {
  0% { opacity: 1; }
  100% { opacity: 0; }
}

main {
  .is-about & {
    filter: blur(40px);
  }
}

ul {
  list-style-type: disc;
  padding-left: 30px;
}

.header {
  width: calc(100% - 2rem);
  position: fixed;
  left: 1rem;
  top: 1rem;
  display: flex;
  justify-content: space-between;
  z-index: 9999;
  color: #ffffff;
  backface-visibility: hidden;
  transition: color 0.15s $easing;

  .is-project & {
    color: #000000;
  }

  .is-about & {
    color: #000000 !important;
    transition: none;
  }
}

.header-title {
  position: relative;
  text-shadow: $textshadow;
  transition: text-shadow 0.25s 0.5s;

  .is-project &,
  .is-about & {
    text-shadow: none;
    transition: text-shadow 0.25s 0s;
  }
}

.header-toggle {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  cursor: pointer;
}

.header-nav {
  color: transparent;
  -webkit-text-stroke: 0.75px #fff;

  .is-about &,
  .is-project & {
    -webkit-text-stroke: 0.75px #000;
  }
}

main {
  width: calc(100vw + 20px);
  height: 100vh;
  padding-right: 20px;
  position: fixed;
  overflow-y: auto;
  overflow-x: hidden;
}



.information {
  width: 100vw;
  height: 100vh;
  padding: 1rem;
  padding-top: 4rem;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(white, 0.3);
  opacity: 0;
  visibility: hidden;
  cursor: initial;
  overflow: auto;

  @media (min-width: 1024px) {
    display: flex;
    justify-content: space-between;
  }

  h2 {
    margin-bottom: 30px;
  }

  .is-about & {
    opacity: 1;
    visibility: visible;
  }
}

.information__contact,
.information__sections {
  @media (min-width: 1024px) {
    width: 46%;
  }
}

.information__contact {
  margin-bottom: 60px;

  @media (min-width: 1024px) {
    position: fixed;
    top: 4rem;
    left: 1rem;
  }
}

.information__sections {
  @media (min-width: 1024px) {
    margin-left: auto;
  }
}

.information__section {
  margin-bottom: 60px;
}







.project {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: relative;

  &:last-child {
    margin-bottom: 2px;
  }
}

.project-slides {
  position: absolute;
  transition: transform 1s $easing;
  will-change: transform;
  transform: translate3d(0, 0, 0);
}

.slide {
  width: 100vw;
  height: 100vh;
  position: relative;
  float: left;
  display: flex;
}

.slide-content {
  margin: auto;

  p {
    width: 60vw;
    height: auto;
    font-size: 1.25rem;
    line-height: 1.4;
    letter-spacing: 0.2px;

    @media (orientation: portrait) and (max-width: 768px) {
      width: calc(100% - 2rem);
      margin: auto;
      font-size: 1rem;
    }
  }

  p + p {
    margin-top: 1rem;
  }

  img {
    width: auto;
    height: 75vh;
    transform: translate3d(0, 0, 0);
  }
}

.slide-content__header {
  margin-bottom: 1rem;

  @media (orientation: portrait) and (max-width: 768px) {
    width: calc(100% - 2rem);
    margin-left: auto;
    margin-right: @margin-left;
  }
}

.slide-content__copy {
  &.is-small p {
    font-size: 1rem;
  }
}

.slide--cover {
  background: rgba(red, 0.2);
  cursor: e-resize;
  position: relative;

  img {
    width: 100%;
    height: auto;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate3d(0, -50%, 0);

    // .is-about & {
    //   filter: blur(50px);
    // }
  }

  .is-about & {
    overflow: hidden;
  }
}

.slide {
  @media (orientation: portrait) and (max-width: 768px) {
    overflow: hidden;

    img {
      width: auto;
      height: 100%;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate3d(-50%, -50%, 0);
    }
  }
}

.slide--default {
  // .is-about & {
  //   filter: blur(50px);
  // }
}

.cover-info  {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
}

.project-info {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 999;
  cursor: initial;
  backface-visibility: hidden;

  .is-about & {
    opacity: 0;
  }
}

.project-info__header {
  position: absolute;
  left: 50%;
  bottom: 1rem;
  transform: translateX(-50%);
}

.project-info__location {
  width: 60vw;
  pointer-events: none;
  font-size: 10px;
  letter-spacing: 0.03px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  opacity: 0;
  transition: opacity 0.5s;

  .is-active & {
    opacity: 1;
  }
}

.project-info__title,
.project-info__intro {
  transition: opacity 0.25s;
}

.project-info__title {
  cursor: pointer;
  opacity: 0;
  transition-delay: 0.5s;

  .is-active & {
    opacity: 1;
    transition-delay: 0s;
  }
}

.project-info__intro {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
  color: #ffffff;
  text-shadow: $textshadow;
  transition-delay: 0.5s;

  .is-active & {
    opacity: 0;
    transition-delay: 0s;
  }
}

.project-info__toggle {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  border: 0;
  background: none;
  opacity: 0;
  cursor: pointer;
}

.project-info__panel {
  width: 100vw;
  min-height: 50vh;
  padding: 1.5rem;
  position: absolute;
  left: 0;
  bottom: 0;
  transform: translate3d(0, 100%, 0);
  background: #ffef88;
  transition: transform 0.5s $easing;
  will-change: transform;

  @media (min-width: 1024px) {
    display: flex;
    justify-content: space-between;
  }

  .is-info & {
    transform: translate3d(0, 0, 0);
  }
}

.project-info__description {
  @media (min-width: 1024px) {
    width: 70%;
    padding-right: 1.5rem;
  }

  @media (max-width: 1024px) {
    margin-bottom: 1rem;
  }
}

.project-info__meta {
  font-size: 0.8rem;
  line-height: 22px;
  letter-spacing: 0.015em;

  @media (min-width: 1024px) {
    width: 30%;
    padding-top: 5px;
  }
}



.audio-player {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  text-align: center;

  audio {
    display: none;
  }
}

.audio-player__track {
  width: 280px;
  height: 8px;
  display: block;
  position: relative;
  background: white;
  box-shadow: $textshadow;
  margin-bottom: 15px;

  span {
    width: 100%;
    height: 100%;
    position: absolute;
    background: red;
    left: 0;
    top: 0;
    transform: scale(0, 1);
    transform-origin: left center;
  }
}

.audio-player__play,
.audio-player__pause {
  width: 60px;
  height: @width;
  text-indent: -99999px;
  position: relative;
  background: none;
  outline: none;
  border: 0;

  &:before,
  &:after {
    content: '';
    position: absolute;
  }
}

.audio-player__play {
  &:after,
  &:before {
    width: 36px;
    height: @width;
    border-top: 18px solid transparent;
    border-left: 36px solid white;
    border-bottom: 18px solid transparent;
    left: calc(50% - 18px);
    top: @left;
  }

  &:before {
    border-left-color: rgba(black, 0.7);
    transform: translateY(3px);
    filter: blur(3px);
  }

  .is-paused & {
    display: inline-block;
  }

  .is-playing & {
    display: none;
  }
}

.audio-player__pause {
  display: none;

  &:before, &:after {
    width: 8px;
    height: 36px;
    background: white;
    left: calc(50% - 4px);
    top: calc(50% - 18px);
    box-shadow: $textshadow;
  }

  &:before {
    transform: translateX(-8px);
  }

  &:after {
    transform: translateX(8px);
  }

  .is-playing & {
    display: inline-block;
  }
}




.scrollbar {
  width: 20px;
  height: 100vh;
  position: fixed;
  right: 0;
  top: 0;
  // mix-blend-mode: color-dodge;

  .is-about & {
    opacity: 0;
  }
}

.scrollbar-thumb {
  width: 100%;
  height: 60px;
  position: absolute;
  background: linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(50,50,50,1) 100%);
  will-change: transform;
  transform-origin: 0% 0%;
  border-radius: 8px;
  opacity: 0;
}


footer {
  display: none;
}