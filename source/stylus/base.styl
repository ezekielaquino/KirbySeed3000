$easing = cubic-bezier(0.645, 0.045, 0.355, 1);
$textshadow = 3px 3px 5px rgba(0, 0, 0, 0.6);

:root {
  --cursor: default;
}

* {
  outline: none;
}

html,
body {
  overflow: hidden;
}

html {
  font-size: 20px;
  overflow-x: hidden;

  @media (max-width: 670px) {
    font-size: 16px;
  }

  @media (min-width: 1500px) {
    font-size: 27px;
  }
}

body {
  width: 100%;
  height: 100%;
  font-family: 'Maxima-Med', 'Helvetica', sans-serif;
  font-weight: 500;
  line-height: 1.45;
  letter-spacing: 0.02em;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-overflow-scrolling: touch;

  &:after {
    content: '';
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
    background: #111;
    animation: fadeOut 0.5s 0.18s forwards;
  }
}

main {
  transition: transform 0.75s !important;
}

img {
  display: block;
}

ul {
  list-style-type: circle;
  padding-left: 20px;
}

p,
ul {
  a {
    position: relative;
    transition: opacity 0.1s;

    &:before {
      width: 100%;
      height: 1px;
      content: '';
      position: absolute;
      left: 0;
      bottom: 0px
      background: #000;
    }

    &:hover {
      opacity: 0.45;
    }
  }
}

.header-title {
  left: 1.5rem;
  color: #fff;
  transition: opacity 0.18s;
  // mix-blend-mode: exclusion;

  h1 {
    transition: opacity 0.2s;

    &.is-hidden {
      opacity: 0;
    }
  }

  .is-light & {
    color: #000000;
  }

  .is-project &,
  .is-touched & {
    color: #000 !important;
  }

  &.is-hidden {
    opacity: 0;
  }

  @media (max-width: 600px) {
    left: 1rem;
  }
}

.js-infoToggle {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  cursor: pointer;
}

.header-title,
.header-nav {
  position: fixed;
  top: 1rem;
  z-index: 9999;
  transition: color 0.18s linear;

  .is-about &,
  [data-theme="light"] & {
    color: #000000;
  }
}

.header-nav {
  right: 1.5rem;
  color: transparent !important;
  -webkit-text-stroke: 0.75px #fff;
  transition: -webkit-text-stroke 0.18s linear;

  .is-touched &,
  [data-theme="light"] & {
    -webkit-text-stroke: 0.75px #000;
  }

  .is-about & {
    display: none;
  }

  @media (max-width: 600px) {
    right: 1rem;
  }
}

#projects {
  position: fixed;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.information {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(white, 0.3);
  opacity: 0;
  visibility: hidden;
  cursor: initial;
  -webkit-overflow-scrolling: touch;

  @media (max-width: 600px) {
    overflow: auto;
  }

  &__credits {
    font-size: 0.8rem;
  }

  &__wrap {
    -webkit-overflow-scrolling: touch;
    @media (min-width: 600px) {
      padding: 4rem 1.5rem 1.5rem 1.5rem;
      width: 100%;
      height: 100%;
      overflow: auto;
      position: absolute;
      top: 0;
      left: 0;
    }
  }

  @media (min-width: 600px) {
    display: flex;
    justify-content: space-between;
  }

  @media (max-width: 600px) {
    padding: 4rem 1rem 1rem 1rem;
  }

  h2 {
    font-size: 0.8rem;
    margin-bottom: 30px;
  }

  .is-about & {
    opacity: 1;
    visibility: visible;
  }
}

.js-infoClose {
  width: 44px;
  height: 44px;
  padding: 0;
  position: fixed;
  top: 1rem;
  right: 1rem;
  border: 0;
  cursor: pointer;
  background: none;
  z-index: 99999;
  display: none;

  svg {
    position: absolute;
    right: 0;
    top: 0;
  }

  .is-about & {
    display: block;
  }

  @media (max-width: 600px) {
    top: 0;
    right: 0;

    svg {
      width: 16px;
      height: 16px;
      right: 1rem;
      top: 1.1rem;
    }
  }
}

.information__sections {
  @media (min-width: 600px) {
    width: 50%;
  }

  p + p {
    margin-top: 1rem;
  }
}

.information__contact {
  margin-bottom: 60px;

  @media (min-width: 600px) {
    position: absolute;
    top: 4rem;
    left: 1.5rem;
    z-index: 999;
  }

  p + p {
    margin-top: 1rem;
  }
}

.information__sections {
  @media (min-width: 600px) {
    margin-left: auto;
  }
}

.information__section {
  margin-bottom: 60px;
}





.project {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;

  .slide-wrap {
    display: flex;
    cursor: none;
    transition: transform 0.25s;
  }

  &.section--intro .slide-wrap {
    white-space: pre-wrap;
  }
}

.is-about .is-current {
  filter: blur(40px);
}

.project-slides {
  position: absolute;
  // transition: transform 0.58s;
  will-change: transform;
  transform: translate3d(0, 0, 0);
}

.slide {
  width: 100vw;
  height: 100vh;
  position: relative;
  display: flex;
  cursor: none;
  background: #fff;
}

.slide-content {
  margin: auto;
  overflow: hidden;
  backface-visibility: hidden;
  height: 75vh;


  .section--intro &,
  &--text {
    height: auto;
  }

  .slide--cover & {
    height: 100vh;
  }

  p {
    width: 60vw;
    height: auto;
    font-size: 1.25rem;
    line-height: 1.4;
    letter-spacing: 0.2px;

    @media (orientation: portrait) and (max-width: 768px) {
      width: calc(100% - 2rem);
      margin: auto;
      font-size: 1rem;
    }
  }

  p + p {
    margin-top: 1rem;
  }

  img,
  video {
    width: auto;
    height: 75vh;
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
  }

  img {
    opacity: 0;
    transition: opacity 0.25s;

    .is-loaded &,
    &.lazyloaded {
      opacity: 1;
    }
  }

  video {
    @media (max-width: 600px) {
      width: 90vw;
      height: auto;
    }
  }

  .slide--cover & {
    margin: 0;
    width: 100%;
  }
}

.slide-caption {
  width: 90%;
  max-width: 600px;
  position: absolute;
  bottom: 32px;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  opacity: 0;
  transition: none;
  color: #000;

  .slide.active & {
    opacity: 1;
    transition: opacity 0.18s linear;
  }
}

.slide-content__header {
  margin-bottom: 1rem;

  @media (orientation: portrait) and (max-width: 768px) {
    width: calc(100% - 2rem);
    margin-left: auto;
    margin-right: @margin-left;
  }
}

.slide-content__copy {
  &.is-small p {
    font-size: 1rem;
  }
}

.slide--cover {
  position: relative;
  overflow: hidden;

  img,
  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    backface-visibility: hidden;
  }

  video {
    @media (max-width: 800px) {
      position: absolute;
      width: 140%;
      height: auto;
      left: 50%;
      top: 50%;
      transform: translate3d(-50%, -50%, 0);
    }
  }

  .is-about & {
    overflow: hidden;
  }

  &-video {
    background-color: #000;
  }
}

.is-touched.is-current {
 .project-info__title {
   opacity: 1;
  }
 .project-info__intro {
   opacity: 0;
 }
 .project-info__location {
   opacity: 1;
  }
  .project-info__toggle {
    display: block;
    cursor: pointer;
  }
}

.slide--default {
  @media (orientation: portrait) and (max-width: 768px) {
    overflow: hidden;

    img {
      width: 90vw;
      height: auto;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate3d(-50%, -50%, 0);
    }
  }
}

.slide--default {
  // .is-about & {
  //   filter: blur(50px);
  // }
}

.cover-info  {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
}

.project-info {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  cursor: initial;

  .is-about & {
    opacity: 0;
  }
}

.project-info__header {
  position: absolute;
  z-index: 99;
  left: 50%;
  bottom: 32px;
  transform: translateX(-50%);

  @media (max-width: 600px) {
    width: calc(100% - 3rem);
    bottom: 2rem;
  }
}

.project-info__title,
.project-info__intro {
  text-align: center;
}

.title-wrap {
  @media (max-width 720px) {
    text-align: center;
    width: 100%;
    position: absolute;
    bottom: 0;
  }
}

.project-info__location {
  font-size: 11px;
  transition: opacity 0.18s linear;
  white-space: nowrap;
  opacity: 0;

  @media (min-width: 720px) {
    position: absolute;
    right: calc(100% + 30px);
    bottom: 7px;
  }

  @media (max-width: 600px) {
    margin: 0;
  }
}

.project-info__title {
  opacity: 0;
  flex-shrink: 0;
  position: relative;
  z-index: 99;

  .is-touched & {
    animation: fadeIn 0.18s forwards;
  }
}

.project-info__intro {
  width: 100%;
  width: 80vw;
  position: absolute;
  bottom: 0;
  left: 50%;
  opacity: 1;
  transform: translate3d(-50%, 0, 0);
  backface-visibility: hidden;
  transition: opacity 0.18s linear;
  color: #ffffff;
  opacity: 0;

  [data-cover="light"] & {
    color: #000;
  }

  .is-current & {
    opacity: 1;
  }

  @media (min-width: 600px) {
    min-width: 400px;
  }
}

.project-info__close {
  width: 44px;
  height: 44px;
  position: absolute;
  right: 1rem;
  top: 1.5rem;
  background: none;
  border: 0;
  padding: 0;
  cursor: pointer;
  z-index: 99;

  svg {
    width: 14px;
    height: 14px;
    position: absolute;
    top: 0;
    right: 0;
  }
}

.project-info__toggle {
  width: 100%;
  position: absolute;
  border: 0;
  background: none;
  opacity: 0;
  z-index: 99;
  display: none;
  cursor: default;
  font: inherit;

  // .is-touched & {
  //   animation: fadeIn 0.18s 2.3s forwards;
  // }

  @media (min-width: 720px) {
    height: 100%;
    top: 0;
  }

  @media (max-width: 720px) {
    bottom: 0;
  }
}

.project-info__panel {
  width: 100vw;
  max-height: 70vh;
  min-height: 50vh;
  position: absolute;
  z-index: 99999;
  left: 0;
  top: 100%;
  transform: translate3d(0, 0, 0);
  background: #ffef88;
  transition: transform 0.18s linear, visibility 0s 0.18s;
  visibility: hidden;

  .scroll-wrap {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    padding: 1.5rem;
    overflow: auto;

    @media (min-width: 720px) {
      width: calc(100% + 2rem);
      display: flex;
      padding-right: 3.5rem;
      justify-content: space-between;
    }

    @media (max-width: 720px) {
      padding: 1.5rem 1rem;
      display: flex;
      flex-direction: column;
    }
  }

  .is-info & {
    transform: translate3d(0, -100%, 0);
    transition: transform 0.18s linear, visibility 0s 0s;
    visibility: visible;
  }
}

.project-info__description {
  p {
    margin-bottom: 1rem;
  }

  @media (min-width: 720px) {
    width: 70%;
    padding-right: 1.5rem;
  }

  @media (max-width: 720px) {
    margin-bottom: 1rem;
  }

  @media (max-width: 720px) {
    order: 1;
  }
}

.project-info__meta {
  font-size: 0.8rem;
  line-height: 1.35;
  letter-spacing: 0.015em;

  @media (min-width: 720px) {
    width: 30%;
    padding-top: 5px;
  }

  @media (min-width: 1500px) {
    line-height: 1.5;
    padding-top: 7px;
  }

  @media (max-width :720px) {
    width: 100%;
    order: 0;
    margin-bottom: 1.5rem;
  }
}



.audio-player {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  text-align: center;
  z-index: 999;
  cursor: default;
  transition: opacity 0.18s linear, transform 0.2s linear;

  audio {
    display: none;
  }

  .is-about & {
    opacity: 0;
  }

  .is-info & {
    transform: translate3d(-50%, -150%, 0);
  }
}

.audio-player__track {
  width: 80vw;
  max-width: 350px;
  height: 6px;
  display: block;
  position: relative;
  background: white;
  box-shadow: $textshadow;
  margin-bottom: 15px;
  cursor: pointer;

  .indicator {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    transform: scale(0, 1);
    transform-origin: left center;
    pointer-events: none;
  }

  .tooltip {
    padding: 0 7px;
    position: absolute;
    left: 0;
    bottom: calc(100% + 5px);
    font-size: 14px;
    border-radius: 2px;
    box-shadow: $textshadow;
    visibility: hidden;
    pointer-events: none;
  }

  &:hover {
    .tooltip {
      visibility: visible;
    }
  }
}

.audio-player__play,
.audio-player__pause {
  width: 60px;
  height: @width;
  text-indent: -99999px;
  position: relative;
  background: none;
  outline: none;
  border: 0;
  cursor: pointer;

  &:before,
  &:after {
    content: '';
    position: absolute;
  }
}

.audio-player__play {
  &:after,
  &:before {
    width: 36px;
    height: @width;
    border-top: 18px solid transparent;
    border-left: 36px solid white;
    border-bottom: 18px solid transparent;
    left: calc(50% - 18px);
    top: @left;
  }

  &:before {
    border-left-color: rgba(black, 0.7);
    transform: translateY(3px);
    filter: blur(3px);
  }

  .is-paused & {
    display: inline-block;
  }

  .is-playing & {
    display: none;
  }
}

.audio-player__pause {
  display: none;

  &:before, &:after {
    width: 8px;
    height: 36px;
    background: white;
    left: calc(50% - 4px);
    top: calc(50% - 18px);
    box-shadow: $textshadow;
  }

  &:before {
    transform: translateX(-8px);
  }

  &:after {
    transform: translateX(8px);
  }

  .is-playing & {
    display: inline-block;
  }
}




.scrollbar {
  width: 8px;
  height: calc(100px - 4px);
  position: fixed;
  right: 4px;
  top: 2px;
  mix-blend-mode: difference;

  @media (min-width: 1500px) {
    width: 10px;
    right: 6px;
  }

  @media (max-width: 600px) {
    width: 5px;
  }
}

.scrollbar-thumb {
  width: 100%;
  height: 0;
  position: absolute;
  background: linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(50,50,50,1) 100%);
  will-change: transform;
  transform-origin: 0% 0%;
  transition: transform 0.25s, opacity 0.1s;

  .is-about &,
  &.is-hidden {
    opacity: 0;
  }

  @media (max-width: 600px) {
    border-radius: 0;
  }
}

.js-cursor {
  width: 34px;
  height: @width;
  position: fixed;
  pointer-events: none;
  mix-blend-mode: difference;
  z-index: 99999;
  opacity: 0;

  &.is-hidden,
  .is-about & {
    display: none;
  }

  .icon-close,
  .icon-arrow {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%, -50%, 0);
  }

  .icon-close {
    display: none;
  }

  &[data-close="true"] {
    .icon-close {
      display: block;
    }

    .icon-arrow {
      display: none;
    }
  }

  &[data-direction="left"] {
    transform: rotate(180deg);
  }
}


footer {
  display: none;
}

.navigator {
  position: fixed;
  bottom: 32px;
  z-index: 99;
  left: 50%;
  transform: translateX(-50%);
  mix-blend-mode: exclusion;
  color: #fff;
}

@keyframes fadeOut {
  0% { opacity: 1}
  100% { opacity: 0 }
}

@keyframes fadeInOut {
  0% { opacity: 0}
  2% { opacity: 0 }
  5% { opacity: 1 }
  90% { opacity: 1 }
  100% { opacity: 0 }
}

@keyframes fadeIn {
  0% { opacity: 0}
  100% { opacity: 1 }
}