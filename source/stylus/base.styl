$easing = cubic-bezier(0.645, 0.045, 0.355, 1);
$textshadow = 0 2px 8px rgba(0, 0, 0, 0.8);

:root {
  --cursor: default;
}

* {
  outline: none;
}

html {
  font-size: 20px;
  overflow-x: hidden;

  @media (max-width: 670px) {
    font-size: 16px;
  }
}

body {
  width: 100%;
  height: 100%;
  font-family: 'Maxima-Med', 'Arial', sans-serif;
  font-weight: normal;
  line-height: 1.45;
  letter-spacing: 0.02em;
  cursor: var(--cursor);
  -webkit-font-smoothing: antialiased;

  &:after {
    content: '';
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
    background: #111;
    animation: fadeOut 0.5s 0.25s forwards;
  }
}

@keyframes fadeOut {
  0% { opacity: 1; }
  100% { opacity: 0; }
}

main {
  .is-about & {
    filter: blur(40px);
  }
}

ul {
  list-style-type: circle;
  padding-left: 20px;
}

p {
  a {
    text-decoration: underline;
  }
}

.header {
  width: calc(100% - 2rem);
  position: fixed;
  left: 1rem;
  top: 1rem;
  display: flex;
  justify-content: space-between;
  z-index: 9999;
  color: #ffffff;
  backface-visibility: hidden;
  transition: color 0.15s $easing;

  .is-project & {
    color: #000000;
  }

  .is-about & {
    color: #000000 !important;
    transition: none;
  }
}

.header-title {
  position: relative;
  text-shadow: $textshadow;
  transition: text-shadow 0.25s 0.5s;

  .is-project &,
  .is-about & {
    text-shadow: none;
    transition: text-shadow 0.25s 0s;
  }
}

.header-toggle {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  cursor: pointer;
}

.header-nav {
  color: transparent;
  -webkit-text-stroke: 0.75px #fff;

  .is-about &,
  .is-project & {
    -webkit-text-stroke: 0.75px #000;
  }
}

